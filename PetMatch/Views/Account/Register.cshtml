@using PetMatch.Models
@using Resources
@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@section AddToHead{
    <link href="@Url.Content("~/Content/account/register.css")" rel="stylesheet" type="text/css" />
}

<!--=== Content Part ===-->
<div class="body">
    <div class="breadcrumbs margin-bottom-50">
        <div class="container">
            <h1 class="color-green pull-left">Registro</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Home</a> <span class="divider">/</span></li>
                <li class="active">Registro</li>
            </ul>
        </div><!--/container-->
    </div><!--/breadcrumbs-->
    <div class="container">
        <div class="row-fluid margin-bottom-10">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "reg-page", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h3>Regístrate</h3>
                <h4 class="color-green">Inicio de sesión</h4>
                <div class="controls">
                    @Html.LabelFor(m => m.Email, new { @class = "__required" })<span class="color-red __required">*&nbsp;@Html.ValidationMessageFor(m => m.Email)</span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "span12" })
                    @Html.LabelFor(m => m.Password, new { @class = "__required" })<span class="color-red __required">*</span>
                    @Html.PasswordFor(m => m.Password, new { @class="span12" })
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "__required" })<span class="color-red __required">*</span>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "span12" })
                </div>

                <hr />
                <p>¿Ya estás registrado? Haz clic <a href="page_login.html" class="color-green">aquí</a> para ingresar a tu cuenta.</p>
                <div id="__register_socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
                </div>
            }
        </div><!--/row-fluid-->
    </div><!--/container-->
</div><!--/body-->
<!--=== End Content Part ===-->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>

}
